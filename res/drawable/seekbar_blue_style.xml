<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient android:startColor="@color/main_style_color" android:endColor="@color/main_style_color" android:angle="90.0" android:centerY="0.45" android:centerColor="@color/main_style_color" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="@color/main_style_color" android:endColor="@color/main_style_color" android:angle="900.0" android:centerY="0.05" android:centerColor="@color/main_style_color" />
            </shape>
        </clip>
    </item>
</layer-list>
